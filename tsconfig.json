{
  "compilerOptions": {
    "allowJs": true,
    "lib": ["es2017"],
    "moduleResolution": "node",
    "downlevelIteration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "outDir": "dist",
    "preserveConstEnums": true,
    "removeComments": false,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "typeRoots": ["packages/types/", "node_modules/@types/"]
  },
  "include": ["src/*"]
}
